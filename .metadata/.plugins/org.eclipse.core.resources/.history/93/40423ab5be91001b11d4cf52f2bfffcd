	private Reimbursements populateRequest(ResultSet rs, Connection con) throws SQLException {
		int requestID = rs.getInt("reimbursementid");
		String reason = rs.getString("reason");
		Double amount = rs.getDouble("amount");
		int employeeID = rs.getInt("accountid");
		boolean pending = rs.getBoolean("pending");
		boolean approved = rs.getBoolean("approved");
		boolean denied = rs.getBoolean("denied");
		EmployeeDAO ed = new EmployeeDAOImpl();
		Employee e = ed.getEmployeeFromID(employeeID, con);
		
		Reimbursements r = new Reimbursements();
		r.setId(requestID);
		r.setStatus(status);
		r.setAmount(amount);
		r.setEmployee(e);
		r.setManager(m);
		return r;
	}

